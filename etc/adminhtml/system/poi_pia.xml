<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="wirecard_elasticengine_poipia" translate="label" type="text" sortOrder="10"
           showInDefault="1" showInWebsite="1" showInStore="1">
        <label>heading_title_poi_pia</label>
        <field id="active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>text_enabled</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
        <field id="title" translate="label" type="text" sortOrder="20" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_title</label>
        </field>
        <field id="base_url" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>config_base_url</label>
            <comment>config_base_url_desc</comment>
        </field>
        <field id="http_user" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>config_http_user</label>
        </field>
        <field id="http_pass" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>config_http_password</label>
        </field>
        <field id="poipia_action" translate="label" type="select" sortOrder="90" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_payment_action</label>
            <source_model>Wirecard\ElasticEngine\Model\Adminhtml\Source\PoiPiaAction</source_model>
        </field>
        <field id="merchant_account_id" translate="label" type="text" sortOrder="30" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_merchant_account_id</label>
        </field>
        <field id="secret" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>config_merchant_secret</label>
        </field>
        <field id="sort_order" translate="label" type="text" sortOrder="160" showInDefault="1" showInWebsite="1"
               showInStore="0">
            <label>config_sort_order</label>
            <frontend_class>validate-number</frontend_class>
        </field>
        <field id="send_additional" translate="label" type="select" sortOrder="60" showInDefault="1"
               showInWebsite="1" showInStore="1">
            <label>config_additional_info</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
        </field>
    </group>
</include>
